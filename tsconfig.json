{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "target": "es2017",
    "lib": ["DOM", "es2019"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
